<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VKUmaps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.VKUmaps</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <!--non selected star color-->
        <item name="colorControlNormal">#4D000000</item>

        <!--selected star color-->
        <item name="colorControlActivated">@color/fb_color_1</item>
    </style>
    <style name="Theme.PopupMenuStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="Theme.VKUmaps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VKUmaps.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VKUmaps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>